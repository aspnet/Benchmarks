<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net9.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <ServerGarbageCollection>true</ServerGarbageCollection>
    <EnableDefaultCompileItems>false</EnableDefaultCompileItems>
  </PropertyGroup>

  <ItemGroup>
    <Compile Include="Program.cs" />
    <Compile Include="SslStreamClientConnection.cs" />
    <Compile Include="SslStreamClientOptions.cs" />
    <Compile Include="SslStreamClientOptionsBinder.cs" />
    <Compile Include="../Shared/SslStreamOptionsHelper.cs"
             Link="SslStream/Shared/SslStreamOptionsHelper.cs" />
    <Compile Include="$(SystemNetBenchmarksCommonPath)BenchmarkApp.cs"
             Link="Common/BenchmarkApp.cs" />
    <Compile Include="$(SystemNetBenchmarksCommonPath)BenchmarkClient.cs"
             Link="Common/BenchmarkClient.cs" />
    <Compile Include="$(SystemNetBenchmarksCommonPath)LogHelper.cs"
             Link="Common/LogHelper.cs" />
    <Compile Include="$(SystemNetBenchmarksCommonPath)Tls/TlsBenchmarkClient.cs"
             Link="Common/Tls/TlsBenchmarkClient.cs" />
    <Compile Include="$(SystemNetBenchmarksCommonPath)Tls/TlsBenchmarkClientOptions.cs"
             Link="Common/Tls/TlsBenchmarkClientOptions.cs" />
    <Compile Include="$(SystemNetBenchmarksCommonPath)Tls/TlsBenchmarkOptions.cs"
             Link="Common/Tls/TlsBenchmarkOptions.cs" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="System.CommandLine" Version="$(SystemCommandLineVersion)" />
    <PackageReference Include="Microsoft.Crank.EventSources" Version="$(MicrosoftCrankEventSourcesVersion)" />
  </ItemGroup>

</Project>
