<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net7.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <ServerGarbageCollection>true</ServerGarbageCollection>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="System.CommandLine" Version="2.0.0-beta2.21617.1" />
    <PackageReference Include="Microsoft.Crank.EventSources" Version="0.1.0-alpha.20501.1" />
    <Compile Include="../Shared/CommonOptions.cs" />
  </ItemGroup>

  <PropertyGroup Condition="'$(TargetFramework.TrimStart(`netcoreap`))' >= '8.0'">
    <DefineConstants>$(Net80Defines);$(AdditionalConstants)</DefineConstants>
  </PropertyGroup>

</Project>
